@model Negocio.DTO.Personas.PersonasDTO

@{
    Layout = "_Layout";
}
@{
    string alertClass = "alert-success";
    if (TempData["Estado"] == "error")
    {
        alertClass = "alert-danger";
    }
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert @alertClass">
        @TempData["Mensaje"]
    </div>
}

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Personas - DIGITALBANK</title>

</head>
<body>

    <fieldset>
        @using (Html.BeginForm("CreatePersona", "Personas", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <Legend>
                @(Model.IdPersona == 0
                            ? "Agregar Persona"
                            : "Actualizar Persona")
            </Legend>
            <div class="row mb-3">
                <div class="form-group">
                    @Html.LabelFor(m => Model.Nombre, "Nombre Persona")
                    @Html.TextBoxFor(m => Model.Nombre, new { })
                    @Html.ValidationMessageFor(m => Model.Nombre)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => Model.FechaNacimiento, "Fecha de Nacimiento")
                    @Html.TextBoxFor(m => Model.FechaNacimiento, new { @class = " datepicker" })
                    @Html.ValidationMessageFor(m => Model.FechaNacimiento)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => Model.FechaNacimiento, "Sexo")
                    @Html.DropDownListFor(m => Model.Sexo,
                                    new SelectList((IEnumerable<dynamic>)ViewBag.Sexos, "Valor", "Descripcion"),
                                    "Seleccione...", new {  })
                    @Html.ValidationMessageFor(m => Model.Sexo)
                </div>
            </div>

            <div class="d-flex gap-2">
                @Html.HiddenFor(m => m.IdPersona)

                <button type="submit" class="btnEdit">
                    <i class="bi bi-cloud-arrow-up-fill"></i>
                    @(Model.IdPersona == 0 ? "Crear Persona" : "Actualizar Persona")
                </button>

                <button type="button" class="btnBack" onclick="history.back()">
                    <i class="bi bi-box-arrow-left"></i> Volver
                </button>
            </div>
        }
    </fieldset>
</body>
</html>

<script>
    flatpickr(".datepicker", {
        dateFormat: "d-m-Y"
    });
</script>